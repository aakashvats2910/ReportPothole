<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SendPotholeActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/pothole_image_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/upload_img"
        android:padding="80dp"
        android:layout_margin="4dp"
        android:background="#080522DD"/>

    <EditText
        android:id="@+id/comment_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EEF7F2F2"
        android:gravity="top|start"
        android:inputType="textMultiLine"
        android:overScrollMode="always"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        android:lines="5"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:scrollHorizontally="false"
        android:layout_margin="4dp"
        android:padding="8dp"
        android:hint="Add comment!"/>

    <EditText
        android:id="@+id/complainer_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EEF7F2F2"
        android:padding="8dp"
        android:layout_margin="4dp"
        android:hint="Complainer Name"
        android:inputType="textPersonName"/>

    <Button
        android:id="@+id/send_complaint_button"
        android:text="SEND COMPLAINT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"/>

</LinearLayout>