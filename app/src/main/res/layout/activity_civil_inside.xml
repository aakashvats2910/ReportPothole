<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CivilInsideActivity">

    <ListView
        android:id="@+id/just_civil_list_view"
        android:layout_above="@id/linear_layout_civil"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/linear_layout_civil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/unseen_button_civil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="UNSEEN"
            android:background="@drawable/disabled_round"
            android:layout_marginBottom="2dp"
            android:enabled="true"/>

        <Button
            android:id="@+id/verified_button_civil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="VERIFIED"
            android:background="@drawable/round_button"
            android:layout_margin="2dp"
            android:enabled="true"/>

        <Button
            android:id="@+id/completed_button_civil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="COMPLETED"
            android:background="@drawable/round_button"
            android:layout_margin="2dp"
            android:enabled="true"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/refresh_civil_inside"
        android:layout_alignParentEnd="true"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="R"
        android:src="@drawable/reload"
        android:scaleType="fitXY"
        android:background="@drawable/refresh_round"/>

</RelativeLayout>